@model Major_BeanScene_ReservationSystem.Areas.Manager.Models.Employee.Create

<head>
    <link rel="stylesheet" href="~/css/bodyStylingForAllPages.css" />

    <style>
        .form-group input[type="submit"] {
            width: 120px;
            padding: 5px 10px;
            background-color: grey;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin: 0 auto;
            display: block;
        }

        .form-group input[type="submit"]:hover {
            background-color: #b27b43;
        }
        .form-label {
            color:white;
        }

        .form-control {
            color: black;
        }
    </style>
</head>


<div class="container-fluid d-flex flex-column min-vh-100">
    <div class="main-container flex-grow-1 bg-dark">
        <h3 class="text-center my-3">Register Employee</h3>
        <div class="m-2">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="checkbox mb-2 col-md-6">
                    <label asp-for="AssignAdminRole" class="form-label">
                        <input class="form-check-input" asp-for="AssignAdminRole" />
                        Assign Administration Role
                    </label>
                </div>
                <div class="row mb-2">
                    <div class="form-group col-md-6">
                        <label asp-for="FirstName" class="form-label">First name</label>
                        <input asp-for="FirstName" class="form-control" aria-required="true" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName" class="form-label">Last name</label>
                        <input asp-for="LastName" class="form-control" aria-required="true" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="form-group col-md-6">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Register" class="btn" />
                </div>

            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}