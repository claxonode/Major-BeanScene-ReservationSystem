@model Sitting
@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="stylesheet" href="~/css/bodyStylingForAllPages.css" />
    <style>
        .sittings-details{
            border: 2px solid #b27b43;
            border-radius: 5px;
        }

        form input[type="submit"]{
            width: 120px;
            padding: 5px 10px;
            background-color: grey;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        form input[type="submit"]:hover{
            color:white;
            background-color: red;
        }

        a {
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
            color: #b27b43;
        }
    </style>
</head>

<div class="container-fluid d-flex flex-column min-vh-100">
    <div class="main-container flex-grow-1 bg-dark">

        <span id="deleteError" class="text-danger">@ViewData["Error"]</span>
        <h4 class="text-center my-3">Are you sure you want to delete the @Model.Name Sitting?</h4>
        <div class="container">
            <div class="sittings-details text-center m-2">
                <div class="row mt-1 mb-2">
                    <p class="col-md-6">
                        <strong>Closed Sitting?:</strong> @Html.DisplayFor(model => model.IsClosed)
                    </p>
                    <p class="col-md-6">
                        <strong>Sitting Name:</strong> @Model.Name
                    </p>
                </div>
                <div class="row mb-2">
                    <p class="col-md-12">
                        <strong>Date/Time:</strong> @(Model.StartTime.ToString("dddd, d\" of \"MMMM h:mm tt") + " - " + Model.EndTime.ToString("dddd, d\" of \"MMMM h:mm tt"))
                    </p>
                </div>
                <div class="row mb-1">
                    <p class="col-md-4">
                        <strong>Capacity:</strong> @Model.Capacity
                    </p>
                    <p class="col-md-4">
                        <strong>Restaurant:</strong> @Model.Restaurant.Name
                    </p>
                    <p class="col-md-4">
                        <strong>Sitting Type:</strong> @Model.SittingType.Name
                    </p>
                </div>
            </div>
            <form class="row" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="col-md-12 text-center">
                    <input type="submit" value="Delete" class="btn" /> | <a asp-controller="Home" asp-action="Calendar">Back to Calendar</a>
                </div>
            </form>
        </div>
    </div>
</div>
