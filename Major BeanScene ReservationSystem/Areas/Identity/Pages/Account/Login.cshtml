@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<head>
    <link rel="stylesheet" href="~/css/bodyStylingForAllPages.css" />

    <style>
        #login-submit{
            background-color: gray;
            color: white;
            width: 120px;
            padding: 5px 10px;
            border: none;
            
        }

        #login-submit:hover {
            background-color: #b27b43;
            color: white;
        }

        .form-floating{
            margin:auto;
        }

        a {
            text-decoration: none;
            font-size:18px;
        }

        a:hover {
            text-decoration: underline;
            color: #b27b43;
        }

    </style>
</head>

<div class="container-fluid d-flex flex-column min-vh-100">
    <div class="main-container flex-grow-1 text-white bg-dark">
        <h1 class="text-center mt-3">@ViewData["Title"]</h1>
        <section class="container m-2">
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="col-md-6 form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label ">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox text-center mb-3">
                    <label asp-for="Input.RememberMe" id="remember" class="form-label">
                        <input class="form-check-input"  asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="text-center mb-2">
                    <button id="login-submit" type="submit" class="btn">Log in</button>
                </div>
                <div>
                    <p class="text-center">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a> | 
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a> | 
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>



        
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
